<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:id="@+id/kodeOtp">

    <!-- LOGO -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/owelpay_logo"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- TITLE -->
    <TextView
        android:id="@+id/txt_otp_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Masukkan Kode OTP"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- OTP INPUT -->
    <LinearLayout
        android:id="@+id/otp_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/txt_otp_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 4 Kotak OTP -->
        <EditText
            android:id="@+id/otp1"
            android:layout_width="50dp"
            android:layout_height="55dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="22sp"
            android:background="@drawable/otp_box_bg"
            android:layout_margin="6dp" />

        <EditText
            android:id="@+id/otp2"
            android:layout_width="50dp"
            android:layout_height="55dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="22sp"
            android:background="@drawable/otp_box_bg"
            android:layout_margin="6dp" />

        <EditText
            android:id="@+id/otp3"
            android:layout_width="50dp"
            android:layout_height="55dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="22sp"
            android:background="@drawable/otp_box_bg"
            android:layout_margin="6dp" />

        <EditText
            android:id="@+id/otp4"
            android:layout_width="50dp"
            android:layout_height="55dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="22sp"
            android:background="@drawable/otp_box_bg"
            android:layout_margin="6dp" />

    </LinearLayout>

    <!-- Resend -->
    <TextView
        android:id="@+id/txt_resend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kirim ulang kode?"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/otp_box"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txt_kirim_ulang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kirim"
        android:textStyle="bold"
        android:textColor="@color/birulangit"
        android:textSize="18sp"
        android:layout_marginTop="4dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/txt_resend"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- BUTTON VERIFIKASI -->
    <Button
        android:id="@+id/btn_verif"
        android:layout_width="320dp"
        android:layout_height="55dp"
        android:text="Verifikasi"
        android:textSize="16sp"
        android:backgroundTint="@color/pinkowel"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/txt_kirim_ulang"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
